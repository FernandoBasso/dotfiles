[core]
	editor = vim -c 'set spell spelllang=en'
	autocrlf = input
[alias]
	st = status
	co = checkout
	lg = log --pretty='%C(yellow)%h%Creset %Cblue%an%Creset %Cgreen%cr%Creset%Cred%d%Creset %s'
	l1 = log --oneline
	up = push origin --set-upstream HEAD
	ane = commit --amend --no-edit
[color "diff"]
	whitespace = red reverse
[help]
	htmlPath = /home/fernando/Projects/From-Other-People/git-htmldocs
	browser = opera
[status]
	showUntrackedFiles = all
